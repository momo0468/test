  <script>
    document.getElementById('verifikation-form').addEventListener('submit', function(e) {
      e.preventDefault();
      const inputs = document.querySelectorAll('.code-inputs input');
      let code = '';
      inputs.forEach((input, idx) => {
        code += input.value;
        if (idx < 3) code += '-';
      });

      // Beispiel für einen gültigen Code
      const validCode = 'ABCD-1234-EFGH-5678';

      if (code.toUpperCase() === validCode) {
        window.location.reload(); // Oder eine andere gewünschte Aktion
      } else {
        document.getElementById('error-message').style.display = 'block';
      }
    });
  </script>
